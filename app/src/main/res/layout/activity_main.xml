<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_horizontal"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivUFScar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/ifsc" />

    <LinearLayout
        android:id="@+id/lvMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUFScar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnIniciarRFID"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="Iniciar Leitor"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instruções:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Ative seu bluetooth"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Pareie seu celular com o HQ_UHF_READER / PIN: 1234"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Então é só utilizar o app"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
    </LinearLayout>


</LinearLayout>
